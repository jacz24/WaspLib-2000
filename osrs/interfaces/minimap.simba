*)
function TRSMinimap.DisablePrayer(): Boolean;
begin
  if not Self.PrayerEnabled() then
    Exit(True);

  if Self.GetLevel(ERSMinimapOrb.PRAYER) <= 1 then
    Exit(True);

  Mouse.Click(Self.Orbs[ERSMinimapOrb.PRAYER].Circle, EMouseButton.LEFT, True);
  Result := SleepUntil(not Self.PrayerEnabled(), 200, 2*TICK);
end;


(*
## Minimap.CurePoison
